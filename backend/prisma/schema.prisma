generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  ADMIN
  AGENT
}

model Company {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  users            User[]
  whatsAppAccounts WhatsAppAccount[]
  contacts         Contact[]
  tickets          Ticket[]
  funnels          Funnel[]
  messages         Message[]
  aiSettings       CompanyAiSettings?
}

model User {
  id        String   @id @default(cuid())
  companyId String
  email     String
  password  String
  name      String
  role      UserRole @default(AGENT)
  avatarUrl String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  assignedTickets Ticket[] @relation("AssignedTo")

  @@unique([companyId, email])
  @@index([companyId])
  @@index([companyId, email])
}

model WhatsAppAccount {
  id           String   @id @default(cuid())
  companyId    String
  evolutionId  String
  sessionName  String
  status       String   @default("DISCONNECTED")
  phoneNumber  String?
  qrCode       String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deletedAt    DateTime?

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  tickets Ticket[]

  @@unique([companyId, evolutionId])
  @@index([companyId])
}

model Contact {
  id          String   @id @default(cuid())
  companyId   String
  phone       String
  name        String?
  email       String?
  profilePic  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime?

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  tickets Ticket[]

  @@unique([companyId, phone])
  @@index([companyId])
  @@index([companyId, phone])
}

model Funnel {
  id         String   @id @default(cuid())
  companyId  String
  name       String
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  deletedAt  DateTime?

  company Company      @relation(fields: [companyId], references: [id], onDelete: Cascade)
  steps   FunnelStep[]

  @@index([companyId])
  @@index([companyId, isDefault])
}

model FunnelStep {
  id        String   @id @default(cuid())
  funnelId  String
  name      String
  order     Int
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  funnel Funnel @relation(fields: [funnelId], references: [id], onDelete: Cascade)
  tickets Ticket[]

  @@index([funnelId])
  @@index([funnelId, order])
}

model Ticket {
  id               String    @id @default(cuid())
  companyId        String
  contactId        String
  whatsAppAccountId String
  funnelStepId     String
  assignedToId     String?
  lastMessageAt    DateTime  @default(now())
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  deletedAt        DateTime?

  company         Company         @relation(fields: [companyId], references: [id], onDelete: Cascade)
  contact         Contact         @relation(fields: [contactId], references: [id], onDelete: Cascade)
  whatsAppAccount WhatsAppAccount @relation(fields: [whatsAppAccountId], references: [id], onDelete: Cascade)
  funnelStep      FunnelStep      @relation(fields: [funnelStepId], references: [id], onDelete: Restrict)
  assignedTo      User?          @relation("AssignedTo", fields: [assignedToId], references: [id], onDelete: SetNull)
  messages        Message[]

  @@unique([companyId, contactId, whatsAppAccountId])
  @@index([companyId])
  @@index([companyId, lastMessageAt(sort: Desc)])
  @@index([companyId, funnelStepId])
  @@index([companyId, assignedToId])
}

model Message {
  id               String   @id @default(cuid())
  companyId        String
  ticketId         String
  externalId       String?
  content          String
  fromMe           Boolean
  mediaUrl         String?
  mediaType        String?
  status           String?  @default("SENT")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  deletedAt        DateTime?

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  ticket  Ticket  @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@unique([companyId, externalId])
  @@index([companyId])
  @@index([ticketId])
  @@index([companyId, ticketId, createdAt(sort: Desc)])
}

// ─── AI Module ──────────────────────────────────────────────────

enum AiRunType {
  REPLY_SUGGESTION
  SUMMARY
  CLASSIFY
  URGENCY
}

enum AiRunStatus {
  PENDING
  PROCESSING
  SUCCESS
  ERROR
}

model CompanyAiSettings {
  id                   String   @id @default(cuid())
  companyId            String   @unique
  enabled              Boolean  @default(true)
  provider             String   @default("openai") // openai | anthropic | local
  model                String   @default("gpt-4o-mini")
  tone                 String   @default("professional") // professional | friendly | concise | custom
  customTonePrompt     String?  // usado quando tone = "custom"
  guardrails           String[] @default([]) // regras: "nunca prometer desconto", etc.
  knowledgeBaseEnabled Boolean  @default(false)
  maxTokensPerRequest  Int      @default(1024)
  dailyLimitTokens     Int      @default(100000)
  dailyTokensUsed      Int      @default(0)
  dailyResetAt         DateTime @default(now())
  saveOutputs          Boolean  @default(true)
  redactSensitiveData  Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  company Company @relation(fields: [companyId], references: [id], onDelete: Cascade)

  @@index([companyId])
}

model AiRun {
  id            String      @id @default(cuid())
  companyId     String
  ticketId      String
  userId        String?
  type          AiRunType
  status        AiRunStatus @default(PENDING)
  inputHash     String?     // sha256 do input pra cache
  input         String?     // contexto enviado (opcional, depende de saveOutputs)
  output        String?     // resposta da IA
  tokensInput   Int?
  tokensOutput  Int?
  costEstimate  Float?      // custo estimado em USD
  provider      String?
  model         String?
  latencyMs     Int?
  errorMessage  String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([companyId])
  @@index([companyId, ticketId])
  @@index([companyId, type, createdAt(sort: Desc)])
  @@index([inputHash]) // cache lookup
}

model TicketSummary {
  id            String   @id @default(cuid())
  companyId     String
  ticketId      String
  summary       String
  messageCount  Int      // qtde de msgs na hora do resumo
  aiRunId       String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([companyId, ticketId])
  @@index([companyId])
  @@index([ticketId])
}
